#!/usr/bin/env fish

echo -e "\033[0;32m>>>>> Begin Setting Up Fisher <<<<<\033[0m"

## Install fisher
if not type -q fisher
  echo "installing fisher"
  curl -sL https://git.io/fisher | source && fisher install jorgebucaran/fisher

  # Re-apply fish_plugins because the file is flushed when fisher is installed
  {{ .chezmoi.executable }} apply ~/.config/fish/fish_plugins
end

# This script will run whenever I added something to .config/fish/fish_plugins
# .config/fish/fish_plugins hash: {{ include "dot_config/private_fish/fish_plugins.tmpl" | sha256sum }}
fisher update

echo -e "\033[0;32m>>>>> Finish Setting Up Fisher <<<<<\033[0m"
